<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/rowBackground"
    android:paddingVertical="8sp"
    android:paddingHorizontal="8sp"
    android:layout_marginVertical="4sp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/ticket_description"
        android:layout_width="match_parent"
        android:layout_height="28sp"
        android:text="Pongal Holiday Starts"
        android:textAlignment="textStart"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/booking_date_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:text="Booking Opens On"
            android:textAlignment="textStart"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/ticket_description"
            app:layout_constraintStart_toStartOf="@+id/ticket_description"
            app:layout_constraintTop_toBottomOf="@+id/ticket_description" />

</android.support.constraint.ConstraintLayout>
